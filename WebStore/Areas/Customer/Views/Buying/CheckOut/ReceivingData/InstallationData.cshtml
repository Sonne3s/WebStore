@using WebStore.Areas.Customer.ViewModels.Buying
@model CheckOutDeliveryDataViewModel

<div class="installation-input-block">
    <label for="exampleInputEmail1" class="input-label">Адрес доставки</label>
    <div class="input-container">
        <input type="text"id="Address" name="Installation.Address" value="@Model.Address">
    </div>
</div>
<div class="installation-input-block">
    <label for="exampleInputEmail1" class="input-label">Дата и время</label>
    <div class="input-container">
        <input type="text" id="DateAndTime" name="Installation.DateAndTime" value="@Model.DateAndTime">
        <small class="hint">Укажите удобные Вам дату и время проведения монтажных работ. В случае необходимости менеджер согласует с вами необходимые коррективы.</small>
    </div>
</div>
<div class="installation-input-block">
    <div class="area-container">
        <textarea id="Other" name="Installation.Other" placeholder="Оставьте свои пожелания к заказу и мы постараемся Вас не разочаровать">@Model.Other</textarea>
    </div>
</div>