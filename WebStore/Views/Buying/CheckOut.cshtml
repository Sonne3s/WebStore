@using WebStore.ViewModels
@model BuyingCheckOutViewModel

<div class="container">
    <form asp-action="CheckOut" asp-controller="Buying" class="tab-form border-info">
        <ul class="nav nav-tabs check-out" id="myTab" role="tablist">
            <li class="nav-item check-out" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Оформление заказа</button>
            </li>
            <li class="nav-item check-out" role="presentation">
                <button class="nav-link active" id="receiving-tab" data-bs-toggle="tab" data-bs-target="#receiving" type="button" role="tab" aria-controls="receiving" aria-selected="true">Доставка и способ платы</button>
            </li>
        </ul>
        <div class="tab-content border-top rounded-bottom border-info row" id="myTabContent">
            <div class="tab-pane my-3 fade col-8 offset-2" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <div class="rounded border-info border p-3">
                    <div class="row mb-3">
                        <label for="exampleInputEmail1" class="col-sm-2 form-label">ФИО</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="fullname" name="fullname" value="@Model.FullName">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="exampleInputEmail1" class="col-sm-2 form-label">Компания</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="company" name="company" value="@Model.Company">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="exampleInputEmail1" class="col-sm-2 form-label">Телефон</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="phone" name="phone" value="@Model.Phone">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="exampleInputEmail1" class="col-sm-2 form-label">Email</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="email" name="email" value="@Model.Email">
                        </div>
                    </div>
                    <button type="button" class="btn bg-camel text-white d-grid gap-2 col-6 mx-auto">Перейти на следующий шаг</button>
                </div>
            </div>
            <div class="tab-pane my-3 fade col-8 offset-2 active show" id="receiving" role="tabpanel" aria-labelledby="payment-tab">
                <div class="row border-info nav nav-tabs">
                    <div class="rounded border-info border">
                        <div class="btn-group w-100 my-3 mx-1 row" role="tablist">
                            <div class="col-4">
                                <h5 class="dropdown-header">Монтаж</h5>
                                <input type="radio" class="btn-check" name="DeliveryType" id="DeliveryTypeInstallation" autocomplete="off" data-bs-toggle="tab" data-bs-target="#receiving-method-1" role="tab" checked>
                                <label class="btn btn-outline-info w-100" for="DeliveryTypeInstallation"><i class="bi bi-tools"></i></label>
                            </div>
                            <div class="col-4">
                                <h5 class="dropdown-header">Доставка</h5>
                                <input type="radio" class="btn-check" name="DeliveryType" id="DeliveryTypeDelivery" autocomplete="off" data-bs-toggle="tab" data-bs-target="#receiving-method-2" role="tab">
                                <label class="btn btn-outline-info w-100" for="DeliveryTypeDelivery"><i class="bi bi-truck"></i></label>
                            </div>
                            <div class="col-4">
                                <h5 class="dropdown-header">Самовывоз</h5>
                                <input type="radio" class="btn-check" name="DeliveryType" id="DeliveryTypePickup" autocomplete="off" data-bs-toggle="tab" data-bs-target="#receiving-method-3" role="tab">
                                <label class="btn btn-outline-info w-100" for="DeliveryTypePickup"><i class="bi bi-shop"></i></label>
                            </div>
                        </div>
                        <div class="col-12 tab-content" id="receiving-method-tabContent">
                            <div class="tab-pane fade show active" id="receiving-method-1" role="tabpanel">
                                <div class="row mb-3">
                                    <label for="exampleInputEmail1" class="col-sm-2 form-label">Адрес доставки</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Installation.Address" name="Installation.Address" value="@Model.Installation.Address">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="exampleInputEmail1" class="col-sm-2 form-label">Дата и время</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Installation.DateAndTime" name="Installation.DateAndTime" value="@Model.Installation.DateAndTime">
                                        <small id="exampleInputEmail1" class="form-text text-muted">Укажите удобные Вам дату и время проведения монтажных работ. В случае необходимости менеджер согласует с вами необходимые коррективы.</small>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-12">
                                        <textarea class="form-control" id="Installation.Other" name="Installation.Other" placeholder="Оставьте свои пожелания к заказу и мы постараемся Вас не разочаровать">@Model.Installation.Other</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="receiving-method-2" role="tabpanel">
                                <div class="row mb-3">
                                    <label for="exampleInputEmail1" class="col-sm-2 form-label">Адрес доставки</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Delivery.Address" name="Delivery.Address" value="@Model.Delivery.Address">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="exampleInputEmail1" class="col-sm-2 form-label">Дата и время</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="Delivery.DateAndTime" name="Delivery.DateAndTime" value="@Model.Delivery.DateAndTime">
                                        <small id="exampleInputEmail1" class="form-text text-muted">Укажите удобные Вам дату и время доставки. В случае необходимости менеджер согласует с вами необходимые коррективы.</small>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-12">
                                        <textarea class="form-control" id="Delivery.Other" name="Delivery.Other" placeholder="Оставьте свои пожелания к заказу и мы постараемся Вас не разочаровать">@Model.Delivery.Other</textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="receiving-method-3" role="tabpanel">
                                Самовывоз
                            </div>
                            <button type="submit" class="btn bg-camel text-white d-grid gap-2 col-6 mx-auto mb-2">Перейти к оплате</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/js/CheckOutTab.js" asp-append-version="true"></script>